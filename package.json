  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "*"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  }
