{
  "name": "ovrjs",
  "version": "0.0.1",
  "description": "OpenVR bindings for NodeJS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
